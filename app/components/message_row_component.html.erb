<a href="<%= message_path(@message) %>" class="block border-b border-gray-100 hover:bg-gray-50 transition-colors <%= @selected ? 'bg-blue-50' : 'bg-white' %>" data-turbo-frame="message_detail" data-turbo-action="advance" data-action="click->live-renderer#setState" data-live-renderer-selected-param="true">
  <div class="flex items-start gap-3 p-3">
    <% if @message.sender_avatar_url %>
      <img src="<%= @message.sender_avatar_url %>" alt="<%= @message.sender.name %>" class="w-8 h-8 text-xs rounded-full object-cover">
    <% else %>
      <%= tag.div @message.sender.initials, class: ["w-8 h-8 text-xs rounded-full flex items-center justify-center text-white font-medium", avatar_color(@message.sender)] %>
    <% end %>
    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2 min-w-0">
          <% unless @message.read? %>
            <span class="inline-block w-2 h-2 bg-blue-600 rounded-full shrink-0"></span>
          <% end %>
          <%= tag.span @message.sender.name, class: ["text-sm text-gray-900 truncate", @message.read? ? "font-medium" : "font-bold"] %>
        </div>
        <div class="flex items-center gap-1 shrink-0">
          <button type="button" class="p-0.5" data-action="click->live-renderer#performAction" data-live-renderer-action-param="toggle_star">
            <% if @message.starred? %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-400"><path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" /></svg>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-gray-300 hover:text-yellow-400"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" /></svg>
            <% end %>
          </button>
          <span class="text-xs text-gray-500"><%= time_ago_in_words(@message.created_at) %></span>
        </div>
      </div>
      <div class="flex items-center gap-1.5 min-w-0">
        <%= tag.p @message.subject, class: ["text-sm truncate", @message.read? ? "text-gray-700" : "font-semibold text-gray-900"] %>
        <% @message.labels.each do |label| %>
          <%= tag.span label.name, class: ["inline-flex items-center rounded-full px-1.5 py-0.5 text-xs font-medium", label_color_classes(label)] %>
        <% end %>
      </div>
      <p class="text-sm text-gray-500 truncate"><%= @message.preview %></p>
    </div>
  </div>
</a>
